<%- include("partials/header"); -%>
<%- include("navbar") -%> 
  
    <div class="registration-form login-form">
      <h4>Profile Details</h4>
        <div class="row g-3">
          <div class="col-sm-6">
            <label for="firstName" class="form-label">First name</label>
            <p class="profile firstname"><%=firstName%></p>
          </div>
    
          <div class="col-sm-6">
            <label for="lastName" class="form-label">Last name</label>
            <p class="profile lastname"><%=lastName%></p>
          </div>
    
          <div class="col-12">
            <label for="username" class="form-label">Username</label>
            <div class="p-group has-validation">
              <p class="profile username"><%=username%></p>
            </div>
          </div>
    
          <div class="col-12">
            <label for="email" class="form-label">Email</label>
            <p class="profile email"><%=email%></p>
          </div>
          <a class="w-25 btn btn-primary btn-md" href="/updateUser" role="button">Update Profile</a>
    
    </div>
    
    


<%- include("partials/footer"); -%>
